<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/app_bar"
        layout="@layout/material_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar"
        android:background="@color/white"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_regions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/sign_in_background"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/region_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/sign_in_help_regions_header"
                    android:textColor="@color/sign_in_help_black"
                    android:textSize="17sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/regions_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/ll_regions"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_question_one"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/signin_question_one_txt"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_answer_one"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="@string/signin_answer_one_txt"
                    android:textColor="@color/group2_header"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_question_two"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/signin_question_two_txt"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_answer_two"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_32dp"
                    android:text="@string/signin_answer_two_txt"
                    android:textColor="@color/group2_header"
                    android:textSize="@dimen/text_size_16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_height_1dp"
                        android:background="@color/divider_color" />

                    <TextView
                        android:id="@+id/tv_member_Services"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_height_48dp"
                        android:gravity="center|start"
                        android:text="@string/member_services"
                        android:textColor="@color/group2_header"
                        android:textSize="@dimen/text_size_16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_height_1dp"
                        android:background="@color/divider_color" />

                    <TextView
                        android:id="@+id/tv_register"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_height_48dp"
                        android:gravity="center|start"
                        android:text="@string/register_now_btn_txt_new"
                        android:textColor="@color/group2_header"
                        android:textSize="@dimen/text_size_16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_height_1dp"
                        android:background="@color/divider_color" />

                    <TextView
                        android:id="@+id/tv_forgot_user"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_height_48dp"
                        android:gravity="center|start"
                        android:text="@string/forgot_user_btn_txt_new"
                        android:textColor="@color/group2_header"
                        android:textSize="@dimen/text_size_16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_height_1dp"
                        android:background="@color/divider_color" />

                    <TextView
                        android:id="@+id/tv_forgot_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_height_48dp"
                        android:gravity="center|start"
                        android:text="@string/forgot_pwd_btn_txt_new"
                        android:textColor="@color/group2_header"
                        android:textSize="@dimen/text_size_16sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_height_1dp"
                        android:background="@color/divider_color" />

                    <TextView
                        android:id="@+id/tv_terms_conditions"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_height_48dp"
                        android:gravity="center|start"
                        android:text="@string/terms_and_condt"
                        android:textColor="@color/group2_header"
                        android:textSize="@dimen/text_size_16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_height_1dp"
                        android:background="@color/divider_color" />

                    <TextView
                        android:id="@+id/tv_privacy_policy"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_height_48dp"
                        android:gravity="center|start"
                        android:text="@string/privacy_stmt"
                        android:textColor="@color/group2_header"
                        android:textSize="@dimen/text_size_16sp" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_height_1dp"
                        android:layout_marginBottom="@dimen/margin_32dp"
                        android:background="@color/divider_color" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/group2_header"
                    android:textSize="16sp" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>