<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/padding_16dp"
    android:paddingTop="@dimen/padding_32dp"
    android:paddingEnd="@dimen/padding_16dp">


    <TextView
        android:id="@+id/create_password_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_create_new_pwd"
        android:textColor="@color/interrupts_header"
        android:textSize="@dimen/text_size_22sp" />

    <TextView
        android:id="@+id/password_suggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_12dp"
        android:text="@string/text_pwd_suggestion"
        android:textColor="@color/interrupts_pwd"
        android:textSize="@dimen/text_size_17sp" />


    <TextView
        android:id="@+id/new_password_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_32dp"
        android:text="@string/text_new_pwd"
        android:textColor="@color/interrupts_header"
        android:textSize="@dimen/text_size_17sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_56dp"
        android:layout_marginTop="@dimen/margin_4dp"
        android:background="@drawable/confirm_email_textbox">

        <EditText
            android:id="@+id/new_password_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/password_strength_text"
            android:background="@null"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:labelFor="@id/new_password_edittext"
            android:minHeight="@dimen/layout_height_56dp"
            android:paddingStart="@dimen/padding_16dp"
            android:paddingEnd="120dp"
            android:textColor="@color/interrupts_header"
            android:textSize="@dimen/text_size_17sp" />

        <TextView
            android:id="@+id/password_strength_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/margin_24dp"
            android:layout_marginEnd="@dimen/margin_12dp"
            android:gravity="end"
            android:textColor="@color/interrupts_pwd"
            android:textSize="@dimen/text_size_15sp" />

        <TextView
            android:id="@+id/progress_strength_bar"
            android:layout_width="308dp"
            android:layout_height="@dimen/margin_4dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/margin_2dp"
            android:layout_marginBottom="@dimen/margin_2dp"
            android:background="@color/green_color" />
    </RelativeLayout>

    <TextView
        android:id="@+id/confirm_password_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_32dp"
        android:labelFor="@id/confirm_password_title"
        android:text="@string/text_confirm_pwd"
        android:textColor="@color/interrupts_header"
        android:textSize="@dimen/text_size_17sp" />

    <EditText
        android:id="@+id/confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4dp"
        android:background="@drawable/confirm_email_textbox"
        android:inputType="textPassword"
        android:minHeight="@dimen/layout_height_56dp"
        android:paddingStart="@dimen/padding_16dp"
        android:paddingEnd="85dp"
        android:textColor="@color/interrupts_header" />

    <Button
        android:id="@+id/confirm_btn"
        android:layout_width="@dimen/layout_width_136dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/margin_32dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/confirm_email_button"
        android:minHeight="@dimen/layout_height_48dp"
        android:text="@string/btn_confirm"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_17sp" />
</LinearLayout>
