<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_fingerprint_opt_in_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/title_txtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_fingerprint_opt_in_title"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/message_txtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/dialog_fingerprint_opt_in_message"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/error_container_linLyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/error_icon_imgView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/dialog_fingerprint_error_icon_background"
            android:scaleType="centerInside"
            android:src="@drawable/icon_alert_exclamation" />

        <TextView
            android:id="@+id/error_message_txtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minLines="2"
            android:text="@string/dialog_fingerprint_not_recognized_message"
            android:textColor="@color/dialog_fingerprint_error_text_color"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/action_container_linLyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/action_icon_imgView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/dialog_fingerprint_icon_background"
            android:scaleType="centerInside"
            android:src="@drawable/icon_fingerprint_white_24dp" />

        <TextView
            android:id="@+id/action_message_txtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_fingerprint_action_message"
            android:textColor="@color/black" />

    </LinearLayout>
</LinearLayout>