<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:gravity="center"
        android:background="@color/archive_list_otc_header_background"
        android:textSize="18sp"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:text="@string/archive_otc_medication_list_header_text"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/archive_list_divider_color" />

    <include
        layout="@layout/archive_list_item" />

</LinearLayout>