<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="13dp"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:layout_marginTop="13dp">

    <LinearLayout
        android:id="@+id/kphc_med_item_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/kphc_med_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="Cephalexin"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/kphc_med_item_dose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="250 mg Cap"
            android:textColor="@color/black"
            android:textSize="17sp"
             />
    </LinearLayout>

    <TextView
        android:id="@+id/kphc_med_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kphc_med_item_header"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/new_upadate_kphc_desc_background"
        android:paddingBottom="15dp"
        android:paddingLeft="28dp"
        android:paddingRight="28dp"
        android:paddingTop="15dp"
        android:text=""
        android:textColor="@color/kp_txt_color_gray"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/kphc_med_item_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/kphc_med_item_description"
        android:text="Rx#2011500888506"
        android:textColor="@color/kp_gray_text_color"
        android:textSize="18sp"
        android:visibility="gone" />

</RelativeLayout>
