<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_32dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_24dp"
        android:paddingRight="@dimen/padding_24dp">

        <TextView
            android:id="@+id/confirm_email_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm_your_contact_email"
            android:textColor="@color/interrupts_header"
            android:textSize="@dimen/text_size_22sp" />

        <TextView
            android:id="@+id/confirm_email_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact_email_desc"
            android:textColor="@color/interrupts_pwd"
            android:textSize="17sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/email_address_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_4dp"
            android:layout_marginTop="@dimen/margin_40dp"
            android:text="@string/email_address"
            android:textColor="@color/interrupts_header"
            android:textSize="@dimen/text_size_17sp" />

        <EditText
            android:id="@+id/email_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/layout_height_56dp"
            android:background="@drawable/confirm_email_textbox"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:paddingStart="@dimen/padding_16dp"
            android:paddingEnd="@dimen/padding_16dp"
            android:textColor="@color/interrupts_header"
            android:textSize="17sp" />

        <Button
            android:id="@+id/confirm_btn"
            android:layout_width="@dimen/layout_width_136dp"
            android:layout_height="@dimen/layout_height_48dp"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/padding_32dp"
            android:background="@drawable/confirm_email_button"
            android:text="@string/btn_confirm"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_17sp" />
    </LinearLayout>
</RelativeLayout>